@page
@model RobinWeb.Pages.Admin.Products.AddModel
@{
    ViewData["Title"] = "افزودن محصول جدید";
}

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <h2>اطلاعات محصول</h2>
            <hr />
            <div class="form-group">
                <label>نام محصول</label>
                <input type="text" asp-for="Product.ProductName" class="form-control">
                <span asp-validation-for="Product.ProductName"></span>
            </div>
            <div class="form-group">
                <label>توضیح مختصر</label>
                <textarea class="form-control" asp-for="Product.Comment" rows="4"></textarea>
                <span asp-validation-for="Product.Comment"></span>
            </div>
            <div class="form-group">
                <label>توضیحات</label>
                <textarea class="form-control" asp-for="Product.Description" rows="10"></textarea>
                <span asp-validation-for="Product.Description"></span>
            </div>
            <div class="form-group">
                <label>فایل دمو دوره</label>
                <input type="file" name="demoUp">
                <span asp-validation-for="Product.DemoName"></span>
            </div>
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
        </div>
        <div class="col-md-4">
            <p></p>
            <img id="imgProduct" class="thumbnail" src="/img/nophoto.png" />
            <div class="form-group">

                <label>انتخاب تصویر</label>
                <input type="file" name="imgProductUp" id="imgProductUp">
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
        <script>
            function readURL(input) {

                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#imgProduct').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#imgProductUp").change(function () {
                readURL(this);
            });
        </script>

        <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
        <script>

        CKEDITOR.replace('Product_Description', {
                customConfig: '/js/Config.js'
            });

        </script>
}