@page "{handler?}"
@model RobinWeb.Pages.Admin.Sliders.IndexModel
@{
    ViewData["Title"] = "مدریت اسلایدر";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت اسلایدر</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                مدیریت اسلایدر
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                        </div>
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="Add" class="btn btn-outline btn-success">افزودن جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>تصویر</th>
                                    <th>لینک</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slide in Model.Sliders)
                                {
                                        <tr>
                                            <td>@slide.SliderId</td>
                                        <td><img class="thumbnail width-120" src="/img/slider/@slide.ImageName" /></td>
                                        <td>@slide.Link</td>
                                            <td>
                                            <a onclick="deleteUser(@slide.SliderId)" class="btn btn-danger btn-sm">
                                                    حذف
                                                </a>
                                            </td>
                                        </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
        <script type="text/javascript">

            function deleteUser(id) {
                swal({
                    title: "اخطار !",
                    text: "آیا از حذف  مطمئن هستید ؟",
                    icon: "warning",
                    buttons: ["لغو", "بله"]
                }).then((isOk) => {
                    if (isOk) {
                        $.ajax({
                        url: "/Admin/Sliders/DeleteSlider?slideId=" + id,
                            type: "get",
                            beforeSend: function () {
                                $(".loading").show();
                            },
                            complete: function () {
                                $(".loading").hide();
                            }
                        }).done(function (data) {
                            if (data === "Deleted") {
                                swal({
                                    title: "اعملیات با موفقیت انجام شد",
                                    icon: "success",
                                    button: "باشه"
                                }).then((isOk) => {
                                    location.reload();
                                });
                            } else {
                                swal({
                                    title: "اعملیات به مشکل برخورد کرد",
                                    icon: "error",
                                    button: "باشه"
                                });
                            }
                        });
                    }
                });

            }
        </script>
}